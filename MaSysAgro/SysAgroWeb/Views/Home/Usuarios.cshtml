<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add User</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 fv-row">
                        <label class="form-label">User:</label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtUser">
                    </div>
                    <div class="col-lg-6 fv-row ">
                        <label class="form-label">
                            Pass:
                        </label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtPass">
                    </div>


                </div>
                <div class="row">
                    <div class="col-lg-6 fv-row">
                        <label class="form-label">First Name:</label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtfirstname">
                    </div>
                    <div class="col-lg-6 fv-row ">
                        <label class="form-label">
                            Last Name:
                        </label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtlastname">
                    </div>


                </div>
                <div class="row">
                    <div class="mb-3 mt-3">
                        <label class="form-label">
                            Phone:
                        </label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtphone">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">
                            Email:
                        </label>
                        <input type="text" class="form-control form-control-lg form-control-solid" id="txtEmail">
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Save</button>
                <a href="#" class="btn btn-primary">Continue</a>
            </div>

        </div>
    </div>
</div>

